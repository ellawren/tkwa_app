<% content_for :page_header do %>
	<% provide :title, "Vacations" %>
	<div class="page-header">
		<h1><%= @user.name.split[0] %>'s Vacations</h1>
	</div>
<% end %>

<%= form_for @user do |f| %>
	<div id="vacation">
	    <div class="vacation-list">
	        <div class="header-row">
	            <div class="header">Start Date</div>
	            <div class="header">End Date</div>
	            <div class="header hours">Hours</div>
	        </div>
	    <!-- nested form for vacation -->
	        <%= f.fields_for :vacations do |builder| %>
	            <%= render 'fields', :f => builder %>
	        <% end %>
	        <%= link_to_add_vacation_fields_2 "", f, :vacations, "add add-vacation fui-plus" %>
	    <!-- end vacation form -->
	    </div>

	    <div class="save-row">
	        <%= f.submit "Update Vacations", class: "btn btn-primary save-btn" %>
	    </div>
	</div>
<% end %>
