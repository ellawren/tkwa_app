<% content_for :page_header do %>
  <% provide :title, "Vacation Details" %>
  <div class="page-header">
    <h1>Vacation Details</h1>
  </div>
<% end %>

<%= form_for @vacation do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render 'fields', f: f %>

  <div class="actions">
    <%= f.submit "Update Vacation", class: "btn" %>
  </div>
<% end %>