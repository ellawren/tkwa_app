<% content_for :page_header do %>
    <% provide :title, @non_billable_category.name %>
    <%= link_to "Non-Billable Categories", non_billable_categories_path, class: "header-label" %>
    <div class="page-header">
        <h1><%= @non_billable_category.name %></h1>
    </div>
<% end %>

<%= form_for @non_billable_category do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'fields', f: f %>

    <div class="save-row">
        <%= f.submit "Save", class: "btn btn-primary save-btn" %>
    </div>

<% end %>