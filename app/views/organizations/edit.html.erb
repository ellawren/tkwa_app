<% provide :title, @organization.name %>
<%= link_to "Organizations", organizations_path, class: "header-label" %>
<div class="page-header">
    <h1><%= @organization.name %></h1>
    <ul class="controls project">
        <% if @organization.previous.present? %> 
                <li><%= link_to "", organization_path(@organization.previous.id), class: "glyphicon glyphicon-chevron-left tip", title:"Previous" %></li>
        <% end %>
        <% if @organization.next.present? %> 
                <li><%= link_to "", organization_path(@organization.next.id), class: "glyphicon glyphicon-chevron-right tip", title:"Next" %></li>
        <% end %>
        
        <li><%= link_to "", organizations_path, class: "glyphicon glyphicon-search tip", title:"Search Consultants" %></li>
        <li><%= link_to "", new_organization_path, class: "glyphicon glyphicon-plus tip", title:"Add New Consultant" %></li>
        <li class="delete"><%= link_to "", @organization, method: :delete, confirm: "Are you sure you want to delete this consultant and all its data? Do not do this if the consultant has been used on any projects!!!", class: "glyphicon glyphicon-remove tip", title:"Delete This Organization" %>
        </li>
    </ul> 
</div>

<%= form_for @organization do |f| %>

	<%= render 'fields', :f => f %>
       
    <div class="save-row">
        <%= f.submit "Save", class: "btn btn-primary save-btn" %>
    </div> 

<% end %>