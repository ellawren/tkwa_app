<% content_for :page_header do %>
  <% provide :title, "Edit Profile" %>
  <div class="page-header">
    <h1><%= @user.link_name %></h1>
  </div>
<% end %>

<%= form_for(@user, :multipart => true, class: "form-horizontal" ) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'fields', f: f %>

    <div class="save-row">
        <%= f.submit "Update User", class: "btn btn-primary save-btn" %>

    </div>
<div class="clearfix">

</div>
<% end %>