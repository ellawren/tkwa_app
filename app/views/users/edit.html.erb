<% content_for :page_header do %>
  <% provide :title, "Edit Profile" %>
  <div class="page-header">
    <h1><%= @user.name %></h1>
  </div>
<% end %>

<%= form_for(@user, :multipart => true, class: "form-horizontal" ) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'fields', f: f %>

    <div class="save-row">
        <%= f.submit "Update User", class: "btn btn-primary save-btn" %>
    </div>

    <%= link_to "Cancel", user_path(@user), class: "btn btn-large" %>
    <%= link_to "Edit contact info", edit_contact_path(current_user.employee.contact_id), class: "text-btn" %>

<% end %>