<% content_for :page_header do %>
  <% provide :title, @user.name %>
  <div class="page-header">
    <h1><%= @user.name %></h1>
  </div>
<% end %>

<%= form_for(@user, html: { class: "form-horizontal" }) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

    <fieldset>

        <div class="row">
                      
            <div class="span7">
                

                <div class="control-group">
                    <%= f.label(:name, class: "control-label") %>
                    <div class="controls">
                        <%= f.text_field :name, class: "span5" %>
                    </div>
                </div>

                <div class="control-group">
                    <%= f.label(:address, class: "control-label") %>
                    <div class="controls">
                        <%= f.text_area :address, class: "span5", rows: "2" %>
                    </div>
                </div>

                <div class="control-group">
                    <%= f.label :home_phone, class: "control-label" %>
                    <div class="controls">
                        <%= f.text_field :home_phone, class: "span3" %>
                    </div>
                </div>

                <div class="control-group">
                    <%= f.label :cell_phone, class: "control-label" %>
                    <div class="controls">
                        <%= f.text_field :cell_phone, class: "span3" %>
                    </div>
                </div>

                <div class="control-group">
                    <%= f.label :direct_phone, class: "control-label" %>
                    <div class="controls">
                        <%= f.text_field :direct_phone, class: "span3" %>
                    </div>
                </div>

                <div class="control-group">
                    <%= f.label :home_email, class: "control-label" %>
                    <div class="controls">
                        <%= f.text_field :home_email, class: "span5" %>
                    </div>
                </div>
                        
                <div class="control-group">
                    <%= f.label :work_email, class: "control-label" %>
                    <div class="controls">
                        <%= f.text_field :work_email, class: "span5" %>
                    </div>
                </div>

                <div class="control-group">
                    <%= f.label :birthday, class: "control-label" %>
                    <div class="controls">
                        <%= f.date_select :birthday %>
                    </div>
                </div>

                <div class="control-group">
                    <%= f.label :password, class: "control-label" %>
                    <div class="controls">
                        <%= f.password_field :password, class: "span2" %>
                    </div>
                </div>

                <div class="control-group">
                    <%= f.label :password_confirmation, class: "control-label" %>
                    <div class="controls">
                        <%= f.password_field :password_confirmation, class: "span2" %>
                    </div>
                </div>


            </div> <!-- end span7 -->
      
            <div class="span4 offset1">

            </div> <!-- /span4 -->
          
        </div> <!-- end row --> 

    </fieldset>

    <br /><br />

    <div class="row">
        <div class="span12">
            <div class="actions">
                <%= f.submit "Save Changes", class: "btn-large btn-primary span3" %>
                <input type="reset" class="btn btn-large" value="Cancel" onClick="window.location.reload()">
            </div>
        </div>
    </div>

<% end %>



