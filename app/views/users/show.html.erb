<% content_for :page_header do %>
  <% provide :title, @user.name %>
  <div class="page-header">
    <h1><%= @user.name %></h1>
  </div>
<% end %>
<%= @user.email%>


    <% if current_user?(@user) %>
        <br /><br />

        <div class="row">
            <div class="span12">
                <div class="actions">
                    <%= link_to "Edit User Info", edit_user_path(@user), class: "btn btn-large span3" %>
                </div>
            </div>
        </div>
    <% end %>


