    <h3>User Information</h3>  
     
    <div class="wide">
                
        <% if @current_action == 'new' %>
        <div class="input-row">
            <%= f.label(:name, class: "input-label") %>
            <%= f.text_field :name, class: "span5" %>
        </div>
        <% end %>

        <div class="input-row">
            <%= f.label :email, "Login email", class: "input-label" %>
            <%= f.text_field :email %>
        </div>

        <div class="input-row">
            <%= f.label :photo, "Photo", class: "input-label" %>
            <div class="image-box">
                <% if f.object.photo_file_name %>
                    <div class="image-placeholder" id="photo-placeholder">
                        <%= image_tag @user.photo.url(:medium), class: "diagram" %>
                    </div>
                    <div class="image-name" id="photo-name"><%= f.object.photo_file_name %></div>
                    <div class="add-image" >
                        <%= f.file_field :photo %>
                        <div class="text">Change Photo</div>
                    </div>
                    <label for="user_delete_photo" class="fui-cross">
                        <%= f.check_box(:delete_photo) %>
                    </label>
                <% else %>
                    <div class="image-placeholder" id="photo-placeholder"></div>
                    <div class="image-name" id="photo-name"></div>
                    <div class="add-image no-x" >
                        <%= f.file_field :photo %>
                        <div class="text">Select Photo</div>
                    </div>
                <% end %>
            </div>
        </div>

        <%= f.fields_for :employee do |e| %>
            <div class="input-row">
                <%= e.label :number, "Employee Number", class: "input-label" %>
                <%= e.text_field :number  %>
            </div>
        <% end %>

        <h3>Password</h3>

        <div class="input-row">
            <%= f.label :password, class: "input-label" %>
             <%= f.password_field :password %>
        </div>
        <div class="input-row">
            <%= f.label(:password_confirmation, "Confirm Password", class: "input-label") %>
            <%= f.password_field :password_confirmation %>
        </div>
          
    </div> <!-- end row --> 


<script>
    $('#user_photo').live('change', function(){
        text = $(this).val().replace(/C:\\fakepath\\/i, '');
        $('#photo-name').html(text);
        $('#photo-placeholder').empty();
    });
   
    $('#user_delete_photo').live('change', function(){
        if($(this).is(':checked')){
            $('#photo-placeholder').empty();
            $('#photo-name').empty();
            $('label[for="user_delete_photo"]').addClass('checked');
        } else {
            location.reload();
        }
    });
    </script>
