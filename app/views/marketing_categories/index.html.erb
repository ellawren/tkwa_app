<% provide :title, "Marketing Categories" %>
<%= link_to "Admin Panel", admin_path, class: "header-label" %>
<div class="page-header">
	<h1>Marketing Categories</h1>
	<%= link_to "Add Marketing Category", new_marketing_category_path, class: "btn btn-primary btn-right" %>
</div>

<ul class="link-list">
	<% @marketing_categories.each do |param| %>
			<li>
				<%= link_to param.name, edit_marketing_category_path(param.id) %>
				<% if signed_in? %>
					<% if current_user.admin? %>
					| <%= link_to "delete", param, method: :delete, confirm: "You sure?" %>
					<% end %>
				<% end %>
			</li>
	<% end %>
</ul>

