<fieldset>

        <div class="row"> <div class="field">

    			<div class="control-group">
                    <%= f.label(:company, class: "control-label") %>
                    <div class="controls">
                        <%= f.text_field :company, class: "span5" %>
                    </div>
                </div>

                <div class="control-group">
                    <%= f.label(:address, class: "control-label") %>
                    <div class="controls">
                        <%= f.text_area :address, class: "span5", rows: "2" %>
                    </div>
                </div>

                <div class="control-group">
                    <%= f.label :phone, class: "control-label" %>
                    <div class="controls">
                        <%= f.text_field :phone, class: "span3" %>
                    </div>
                </div>

                <div class="control-group">
                    <%= f.label :contact_email, class: "control-label" %>
                    <div class="controls">
                        <%= f.text_field :contact_email, class: "span5" %>
                    </div>
                </div>
  		</div>

</fieldset>