<% provide :title, @consultant.name %>
<%= link_to "Consultants", consultants_path, class: "header-label" %>

<div class="page-header">
    <h1><%= @consultant.name %></h1>
    <%= link_to "edit name", edit_consultant_path(@consultant), class: "btn btn-right" %>
</div>

<h2>Projects</h2>
<ul class="link-list green">
	<% @consultant.projects.each do |id| %>
		<% project = Project.find(id) %>
		<li>
			<%= link_to "#{project.name} (#{project.project_year})<span class=\"note\">#{@consultant.all_roles(id)}</span>".html_safe, info_project_path(id) %>
		</li>
	<% end %>
</ul>