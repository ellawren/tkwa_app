<% provide :title, "Consultants" %>

<div class="page-header">
	<h1>Consultants</h1>
	<%= link_to "Add Consultant", new_consultant_path, class: "btn btn-primary btn-right" %>
</div>

<div class="gray-box">

	<%= search_form_for @q do |f| %>

		<%= f.text_field :name_cont, class: "search-name", placeholder: "Firm Name" %>   
		<%= f.submit "Search", class: "btn btn-primary search-btn" %>
			     
	<% end %>

</div>

<ul class="link-list">
	<% @consultants.each do |param| %>
			<li>
				<%= link_to param.name, consultant_path(param.id) %>
				<% if signed_in? %>
					<% if current_user.admin? %>
					| <%= link_to "delete", param, method: :delete, confirm: "You sure?" %>
					<% end %>
				<% end %>
			</li>
	<% end %>
</ul>

