<% provide :title, "Consultants" %>

<div class="page-header">
	<h1>Consultants</h1>
	<%= link_to "Add Consultant", new_consultant_path, class: "btn btn-primary btn-right" %>
</div>

<ul class="link-list">
	<% @consultants.each do |param| %>
			<li>
				<%= link_to param.name, edit_consultant_path(param.id) %>
				<% if signed_in? %>
					<% if current_user.admin? %>
					| <%= link_to "delete", param, method: :delete, confirm: "You sure?" %>
					<% end %>
				<% end %>
			</li>
	<% end %>
</ul>

