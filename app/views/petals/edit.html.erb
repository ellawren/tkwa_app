<% provide :title, @petal.name %>
<%= link_to "Petals", petals_path, class: "header-label" %>
<div class="page-header">
    <h1><%= @petal.name %></h1>
</div>

<%= form_for @petal do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'fields', f: f %>

    <div class="save-row">
        <%= f.submit "Save", class: "btn btn-primary save-btn" %>
    </div>

<% end %>