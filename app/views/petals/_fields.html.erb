<div class="wide">
    <% if params[:action] == "new" %>
        <div class="input-row">
            <%= f.label(:numerical_order, "Order", class: "input-label") %>
            <%= f.text_field :numerical_order %>
        </div>
        <div class="input-row">
            <%= f.label(:name, "Name", class: "input-label") %>
            <%= f.text_field :name %>
        </div>
    <% end %>
</div>
<div class="full petals">
    <div class="input-row">
        <%= f.label(:subtitle, "Subtitle", class: "input-label") %>
        <%= f.text_field :subtitle %>
    </div>
    <div class="input-row">
        <%= f.label(:short_desc, "Brief Description", class: "input-label") %>
        <%= f.text_area :short_desc, rows: 3 %>
    </div>
    <div class="input-row">
        <%= f.label(:intent, "Petal Intent", class: "input-label") %>
        <%= f.text_area :intent, rows: 6 %>
    </div>
    <div class="input-row">
        <%= f.label(:conditions, "Ideal Conditions & Current Limitations", class: "input-label") %>
        <%= f.text_area :conditions, rows: 6 %>
    </div>
</div>

<script>         
    $(document).ready(function(){
        $('textarea').autosize();   
    });
</script>