<% provide :title, "Petals" %>
<%= link_to "Admin Panel", admin_path, class: "header-label" %>
<div class="page-header">
	<h1>Petals</h1>
	<%= link_to "Add Petal", new_petal_path, class: "btn btn-primary btn-right" %>
</div>

<ul class="link-list">
	<% @petals.each do |param| %>
			<li>
				<%= link_to param.name, edit_petal_path(param.id) %>
				<% if signed_in? %>
					<% if current_user.admin? %>
					| <%= link_to "delete", param, method: :delete, confirm: "You sure?" %>
					<% end %>
				<% end %>
			</li>
	<% end %>
</ul>

