<div class="wide">
    <% if params[:action] == "new" %>
        <div class="input-row">
            <%= f.label(:number, "Order", class: "input-label") %>
            <%= f.text_field :number %>
        </div>
        <div class="input-row">
            <%= f.label(:name, "Name", class: "input-label") %>
            <%= f.text_field :name %>
        </div>
    <% end %>
</div>
<div class="full petals">
    <div class="input-row">
        <%= f.label(:petal_id, "Petal", class: "input-label") %>
        <%= f.collection_select(:petal_id, Petal.order("numerical_order ASC"), :id, :name, { :include_blank => true }, { :class => "custom-select" } ) %>
    </div>
    <div class="input-row">
        <%= f.label(:short_desc, "Brief Description", class: "input-label") %>
        <%= f.text_area :short_desc, rows: 3 %>
    </div>
    <div class="input-row">
        <%= f.label(:full_desc, "Full Description", class: "input-label") %>
        <%= f.text_area :full_desc, rows: 6 %>
    </div>
</div>

<script>         
    $(document).ready(function(){
        $('textarea').autosize();   
    });
</script>