<% provide :title, "New Imperative" %>
<%= link_to "Imperatives", imperatives_path, class: "header-label" %>
<div class="page-header">
    <h1>New Imperative</h1>
</div>

<%= form_for @imperative do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'fields', f: f %>

    <div class="save-row">
        <%= f.submit "Create Imperative", class: "btn btn-primary save-btn" %>
    </div>

<% end %>

