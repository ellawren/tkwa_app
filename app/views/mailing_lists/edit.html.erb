<% content_for :page_header do %>
  	<% provide :title, @mailing_list.name %>
  	<%= link_to "Mailing Lists", mailing_lists_path, class: "header-label" %>
  	<div class="page-header">
    	<h1><%= @mailing_list.name %></h1>
  	</div>
<% end %>

<%= form_for @mailing_list do |f| %>

  	<%= render 'shared/error_messages', object: f.object %>
  	<%= render 'fields', f: f %>

  	<div class="save-row">
        <%= f.submit "Update Mailing List", class: "btn btn-primary save-btn" %>
    </div>

<% end %>