<% content_for :page_header do %>
  	<% provide :title, @mailing_list.name %>
  	<%= link_to "Mailing Lists", mailing_lists_path, class: "header-label" %>
  	<div class="page-header">
    	<h1><%= @mailing_list.name %> </h1>
    	<%= link_to "edit list name", edit_mailing_list_path(@mailing_list), class: "text-btn" %>
  	</div>
<% end %>

<%= form_for @mailing_list do |f| %>

  	<%= render 'shared/error_messages', object: f.object %>

  	<div class="list-names">

        <!-- nested form for list members -->
        <%= f.fields_for :list_members, @list_members do |builder| %>
            <%= render 'list_member_fields', :f => builder %>
        <% end %>
        <%= link_to_add_fields "", f, :list_members, "add fui-plus list-member" %>
    	<!-- end team form -->

    </div>

  	<div class="save-row">
        <%= f.submit "Update Mailing List", class: "btn btn-primary save-btn" %>
    </div>

<% end %>