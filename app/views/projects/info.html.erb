<h3>Project Information</h3>
<%= form_for(@project, html: { class: "form-horizontal" }) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

	<fieldset>
		<div class="notes"></div>
				
		<div class="row">
											
			<div class="span7">
							
				<div class="control-group">
					<%= f.label(:name, "Project Name", class: "control-label") %>
					<div class="controls">
  						<%= f.text_field :name, class: "span5" %>
					</div>
				</div>
								
				<div class="control-group">
					<%= f.label(:location, "Project Location", class: "control-label") %>
					<div class="controls">
						<%= f.text_area :location, class: "span3-75", rows: "2" %>
					</div>
					<a class="btn top-right span1" onclick="openMap('project_location');">Get Map</a>
				</div>
								
				<div class="control-group">
					<%= f.label :client, class: "control-label" %>
					<div class="controls">
						<%= f.text_field :client, class: "span5" %>
					</div>
				</div>

				<div class="control-group">
					<%= f.label :client_type, class: "control-label" %>
					<div class="controls">
						<%= f.select(:client_type, Project::CLIENT_TYPES, {:prompt => '...'}) %>
              		</div>
				</div>					
							
			</div> <!-- end span7 -->
			
			<div class="span5">
							
				<div class="control-group">
					<%= f.label(:number, "Project Number", class: "control-label") %>
					<div class="controls">
						<%= f.text_field :number, class: "span2" %>
					</div>
				</div>
								
				<div class="control-group">
					<%= f.label :building_type, class: "control-label" %>
					<div class="controls">
						<%= f.select(:building_type, Project::BUILDING_TYPES, {:prompt => 'â€¦'}) %>
              		</div>
				</div>
									
          		<div class="control-group">
          			<%= f.label :status, class: "control-label" %>
          			<div class="controls">
		          		<label class="radio"><%= f.radio_button(:status, "Potential") %>Potential</label>
						<label class="radio"><%= f.radio_button(:status, "Current") %>Current</label>
						<label class="radio"><%= f.radio_button(:status, "Completed") %>Completed</label>
					</div>						
          		</div>
							
			</div> <!-- /span5 -->
					
		</div> <!-- /row -->
						
		<br /><br />
						
		<h3>Billing + Contract Information</h3>
		<div class="notes"></div>
						
		<div class="row">
							
			<div class="span7">
					
				<div class="control-group">
					<%= f.label(:billing_name, "Billing Contact", class: "control-label") %>
					<div class="controls">
						<%= f.autocomplete_field :billing_name, autocomplete_contact_name_projects_path, :update_elements => {:work_address => '#project_billing_address', :work_phone => '#project_billing_phone', :work_ext => '#project_billing_ext', :work_email => '#project_billing_email'}, class: "span5" %>
					</div>
				</div>
          				
          		<div class="control-group">
					<%= f.label :billing_address, class: "control-label" %>
					<div class="controls">
						<%= f.text_area :billing_address, class: "span5", rows: "2" %>
					</div>
				</div>
								
				<div class="control-group">
					<%= f.label :billing_phone, class: "control-label" %>
					<div class="controls">
						<%= f.text_field :billing_phone, class: "span3" %>
						&nbsp; Ext: &nbsp;<%= f.text_field :billing_ext, class: "span1" %>
					</div>
				</div>
          				
          		<div class="control-group">
					<%= f.label :billing_email, class: "control-label" %>
					<div class="controls">
						<%= f.text_field :billing_email, class: "span5" %>
					</div>
				</div>
          				
          			
          	</div> <!-- end span7 -->
          					
          	<div class="span5">
				
          		<div class="control-group">
					<%= f.label :billing_type, class: "control-label" %>
					<div class="controls">
						<%= f.select(:billing_type, Project::BILLING_TYPES, {:prompt => '...'}) %>
              		</div>
            	</div>
            
            	<div class="control-group">
					<%= f.label(:billing_travel, "Travel Billing", class: "control-label") %>
					<div class="controls">
						<%= f.select(:billing_travel, Project::BILLING_TRAVEL_TYPES, {:prompt => '...'}) %>
              		</div>
            	</div>
            
            	<div class="control-group">
					<%= f.label(:billing_consultant, "Consultant Billing", class: "control-label") %>
					<div class="controls">
						<%= f.select(:billing_consultant, Project::BILLING_CONSULTANT_TYPES, {:prompt => '...'}) %>
              		</div>
            	</div>
          						
          		<div class="control-group">
					<%= f.label(:billing_outofpocket, "Out-of-Pocket", class: "control-label") %>
					<div class="controls">
						Bill expenses + <%= f.text_field :billing_outofpocket, class: "span1" %> % markup
					</div>
				</div>
          				
  			</div> <!-- end span5 -->
  							
  		</div> <!-- end row -->	
	</fieldset>
	<br /><br />
	<div class="row">
		<div class="span12">
			<div class="actions">
    			<%= f.submit "Save Changes", class: "btn btn-large btn-primary span3" %>
    			<input type="reset" class="btn btn-large" value="Cancel" onClick="window.location.reload()">
			</div>
		</div>
	</div>

<% end %>
			