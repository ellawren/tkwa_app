<% content_for :page_header do %>
	<% provide :title, "Current Projects" %>
    <div class="page-header">
        <h1>Current Projects (<%= @projects.count %>)</h1>
    </div>
<% end %>


    <div class="buttons">
        <%= link_to "by number", projects_current_path(:view => 'number'), :class => "btn #{'active' if params[:view] != 'name'}" %>
        <%= link_to "by name", projects_current_path(:view => 'name'), :class => "btn #{'active' if params[:view] == 'name'}" %>
    </div>
    <table class="table search-results projects current">
        <thead>
            <tr>
                <th>Number</th>
                <th>Name</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
	    <tbody>
            <% if params[:view] != 'name' %>
		        <% @projects.order('number ASC').each do |param| %>
		            <%= render 'project', :f => param %>
		        <% end %>
            <% else %>
                <% @projects.order('name ASC').each do |param| %>
                    <%= render 'project', :f => param %>
                <% end %>
            <% end %>
	    </tbody>
	</table>
