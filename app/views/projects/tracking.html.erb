<%= form_for @project do |f| %>
<%= render 'shared/error_messages', :object => f.object %> 
 
 		<!-- modal for employee target edit -->
		<div class="modal hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  	<div class="modal-header">
		    	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		    	<h3 id="myModalLabel"> </h3>
		  	</div>
		  	<div class="modal-body"></div>
		</div>
		<!-- end modal -->

		<h2>Time Tracking</h2>
		<p class="description">The table below compares <span class="bold">actual hours</span> as entered on timesheets with <span class="bold">target hours</span> as determined by our fee. Staying as close as possible to the target will keep a project profitable, while going over (shown in <span class="bold over">red</span>) represents a net loss. Hover over actual hours for a breakdown by task.</div>

					
		<table class="table tracking-table">
		
			<thead>
                <tr>
                    <th class="bold">Team Member</th>
                    <th class="smalltext"></th>
                    <th class="table-cell">10<br /><span class="blanch">predesign</span></th>
                    <th class="table-cell">20<br /><span class="blanch">schematic</span></th>
                    <th class="table-cell">30<br /><span class="blanch">design dev</span></th>
                    <th class="table-cell">40<br /><span class="blanch">const docs</span></th>
                    <th class="table-cell">50<br /><span class="blanch">bidding</span></th>
                    <th class="table-cell">60<br /><span class="blanch">cc admin</span></th>
                    <th class="table-cell">70<br /><span class="blanch">additional</span></th>
                    <th class="table-cell bold TotalToDate">Total</th>
                    <th class="bold Remaining"></th>
                </tr>
            </thead>
			
			<tbody>

				<!-- employee data rows -->
				<% @project.employee_teams.each do |team| %>
					<%= render 'tracking_fields', :f => team %>
				<% end %>
			
				<tr class="lower total-hours">

					<td class="bold">TOTAL HOURS</td>
				<td class="smalltext"><div class="input-sm act">actual</div><div class="input-sm est">target</div></td>

					<% Phase.all.each do |phase| %>
						<td class="phase-cell <%= phase.name.gsub(/[ ]*/, '') %> <% if @phases.include?(phase) %><% else %>deactivated<% end %>">
							<% if @project.phase_actual("#{phase.number}") == 0 %>
								<div class="input-spacer act"></div>
							<% else %>
								<div class="input act <%= is_over?(@project.phase_est("#{phase.shorthand}"), @project.phase_actual('#{phase.number}')) %>"><%= strip(@project.phase_actual("#{phase.number}")) %></div>
							<% end %>
							<% if @project.phase_est(phase.shorthand) == 0 %>
								<div class="input-spacer est"></div>
							<% else %>
								<div class="input est">
									<%= strip(@project.phase_est(phase.shorthand)) %>
								</div>
							<% end %>
						</td>
					<% end %>
					
					<td class="total TotalToDate gray border-left">
						<% if @project.sum_actual == 0 %>
								<div class="input-spacer act"></div>
						<% else %>
							<div class="input act <%= is_over?(@project.sum_est, @project.sum_actual) %>"><%= strip(@project.sum_actual) %></div>
						<% end %>
						<% if @project.sum_est == 0 %>
							<div class="input-spacer est"></div>
						<% else %>
							<div class="input est"><%= strip(@project.sum_est) %></div>
						<% end %>
					</td>

					<td class="border-left Remaining"><div class="act sum <%= is_over?(@project.sum_est, @project.sum_actual) %>"><%= remaining(@project.sum_est, @project.sum_actual) %></div></td>
				</tr>

				<tr class="billing">

					<td class="bold">TOTAL BILLING</td>
					<td class="smalltext">
						<div class="input-sm act">actual</div>
						<div class="input-sm est">target</div>
					</td>
					<td class="phase-cell">
						<% if @project.actual_billing_total(10) == 0 %>
							<div class="input-spacer act"></div>
						<% else %>
							<div class='input act'><%= number_to_currency(@project.actual_billing_total(10), :precision => 0) %></div>
						<% end %>
						<% if @project.target_billing_total(10) == 0 %>
							<div class="input-spacer est"></div>
						<% else %>
							<div class='input est'><%= number_to_currency(@project.target_billing_total(10), :precision => 0) %></div>
						<% end %>
					</td>
					<td class="phase-cell">
						<% if @project.actual_billing_total(20) == 0 %>
							<div class="input-spacer act"></div>
						<% else %>
							<div class='input act'><%= number_to_currency(@project.actual_billing_total(20), :precision => 0) %></div>
						<% end %>
						<% if @project.target_billing_total(20) == 0 %>
							<div class="input-spacer est"></div>
						<% else %>
							<div class='input est'><%= number_to_currency(@project.target_billing_total(20), :precision => 0) %></div>
						<% end %>
					</td>
					<td class="phase-cell">
						<% if @project.actual_billing_total(30) == 0 %>
							<div class="input-spacer act"></div>
						<% else %>
							<div class='input act'><%= number_to_currency(@project.actual_billing_total(30), :precision => 0) %></div>
						<% end %>
						<% if @project.target_billing_total(30) == 0 %>
							<div class="input-spacer est"></div>
						<% else %>
							<div class='input est'><%= number_to_currency(@project.target_billing_total(30), :precision => 0) %></div>
						<% end %>
					</td>
					<td class="phase-cell">
						<% if @project.actual_billing_total(40) == 0 %>
							<div class="input-spacer act"></div>
						<% else %>
							<div class='input act'><%= number_to_currency(@project.actual_billing_total(40), :precision => 0) %></div>
						<% end %>
						<% if @project.target_billing_total(40) == 0 %>
							<div class="input-spacer est"></div>
						<% else %>
							<div class='input est'><%= number_to_currency(@project.target_billing_total(40), :precision => 0) %></div>
						<% end %>
					</td>
					<td class="phase-cell">
						<% if @project.actual_billing_total(50) == 0 %>
							<div class="input-spacer act"></div>
						<% else %>
							<div class='input act'><%= number_to_currency(@project.actual_billing_total(50), :precision => 0) %></div>
						<% end %>
						<% if @project.target_billing_total(50) == 0 %>
							<div class="input-spacer est"></div>
						<% else %>
							<div class='input est'><%= number_to_currency(@project.target_billing_total(50), :precision => 0) %></div>
						<% end %>
					</td>
					<td class="phase-cell">
						<% if @project.actual_billing_total(60) == 0 %>
							<div class="input-spacer act"></div>
						<% else %>
							<div class='input act'><%= number_to_currency(@project.actual_billing_total(60), :precision => 0) %></div>
						<% end %>
						<% if @project.target_billing_total(60) == 0 %>
							<div class="input-spacer est"></div>
						<% else %>
							<div class='input est'><%= number_to_currency(@project.target_billing_total(60), :precision => 0) %></div>
						<% end %>
					</td>
					<td class="phase-cell">
						<% if @project.actual_billing_total(70) == 0 %>
							<div class="input-spacer act"></div>
						<% else %>
							<div class='input act'><%= number_to_currency(@project.actual_billing_total(70), :precision => 0) %></div>
						<% end %>
						<% if @project.target_billing_total(70) == 0 %>
							<div class="input-spacer est"></div>
						<% else %>
							<div class='input est'><%= number_to_currency(@project.target_billing_total(70), :precision => 0) %></div>
						<% end %>
					</td>
					<td class="total">
						<% if @project.actual_billing_total('Total') == 0 %>
							<div class="input-spacer act"></div>
						<% else %>
							<div class='input act'><%= number_to_currency(@project.actual_billing_total('Total'), :precision => 0) %></div>
						<% end %>
						<% if @project.target_billing_total('Total') == 0 %>
							<div class="input-spacer est"></div>
						<% else %>
							<div class='input est'><%= number_to_currency(@project.target_billing_total('Total'), :precision => 0) %></div>
						<% end %>
					</td>
					<td class="border-left Remaining">
						<div class="act sum <%= is_over?(@project.target_billing_total('Total'), @project.actual_billing_total('Total')) %>">
							<%= remaining_currency(@project.target_billing_total('Total'), @project.actual_billing_total('Total')) %>
						</div>
					</td>

				</tr>

			</tbody>

		</table>


<% end %>

<script>
$(document).ready(function() {
    $("a.pop").popover({ placement: 'right', animation:true });
		$("a.tip").tooltip({ animation: true, placement: 'top', trigger:'hover' });
		$("a.tip-bottom").tooltip({ animation: true, placement: 'bottom', trigger:'hover' });
});
</script>