<% provide :title, "Transmittal" %>


   	<div class="content transmittal">

	   	<%= image_tag("/assets/TKWA-logo.jpg", class: "firm-logo") %>
	   	<div class="firm-address">
	   		<span class="bold">The Kubala Washatko Architects, Inc.</span><br>
	   		W61 N617 Mequon Avenue<br>
	   		Cedarburg, WI 53012-2017<br>
	   		t: (262) 377-6039  |  f: (262) 377-2954
	   	</div>

	   	<h1>Transmittal</h1>
	   	<div class="line"></div>

	   	<div class="info">
	   		<div class="row">
	   			<div class="display-label">Date:</div>
	   			<div class="display-data">
	   				<input class="display" type="text" value="<%= Date.today.strftime("%B %d, %Y") %>">
	       		</div>
	       	</div>
	   		<div class="row">
	   			<div class="display-label">To:</div>
	   			<div class="display-data">
	   				<textarea class="display" rows="5"><%= @contact.name %><%= "&#013;&#010;#{@contact.company.name}".html_safe if @contact.company %><%= "&#013;&#010;#{@contact.address_calc}".html_safe if @contact.address_calc %></textarea>
	       		</div>
	       	</div>
	    </div>

		<div class="info last">
			<div class="row">
	   			<div class="display-label">Re:</div>
	   			<div class="display-data">
	   				<textarea class="display" rows="2">Project Name&#013;&#010;Project #</textarea>
	       		</div>
	       	</div>
	       	<div class="row">
	   			<div class="display-label">From:</div>
	   			<div class="display-data">
	   				<input class="display" type="text" value="Sender Name">
	       		</div>
	       	</div>

	       	<div class="row">
	   			<div class="display-label">Sent Via:</div>
	   			<div class="display-data">
	   				<input class="display" type="text" value="UPS">
	       		</div>
	       	</div>
	   	</div>

	   	<div class="line"></div>

	   	<table class="table transmittal-table">
	   		<thead>
	   			<tr>
	   				<th class="number">#</th>
	   				<th class="item">Item</th>
	   				<th class="notes">Notes</th>
	   			</tr>
	   		</thead>
	   		<tbody>
	   			<tr>
	   				<td class="number"><input class="display" type="text"></td>
	   				<td class="item"><input class="display" type="text"></td>
	   				<td class="notes"><input class="display" type="text"></td>
	   			</tr>
	   			<tr>
	   				<td class="number"><input class="display" type="text"></td>
	   				<td class="item"><input class="display" type="text"></td>
	   				<td class="notes"><input class="display" type="text"></td>
	   			</tr>
	   			<tr>
	   				<td class="number"><input class="display" type="text"></td>
	   				<td class="item"><input class="display" type="text"></td>
	   				<td class="notes"><input class="display" type="text"></td>
	   			</tr>
	   		</tbody>
	   	</table>

	   	<div class="line"></div>

	   	<div class="text">
	   		
   			<textarea class="display" rows="20"></textarea>
       		
	   	</div>
		

    </div> <!-- end content -->

