<% provide :title, "New Contact" %>
<div class="page-header">
	<h1>Add a New Contact</h1>
</div>

<%= form_for @contact do |f| %>
<%= render 'shared/error_messages', object: f.object %>

   <div class="content">

        <%= render 'fields', :f => f %>

        <div class="save-row">
            <%= f.submit "Add Contact", class: "btn btn-primary save-btn" %>
        </div>

    </div> <!-- end content -->

<% end %>