    <% provide :title, @tag.name %>
    <%= link_to "Tags", tags_path, class: "header-label" %>
    <div class="page-header">
        <h1><%= @tag.name %></h1>
    </div>

<%= form_for @tag do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'fields', f: f %>
    
	<h2>Contacts Using This Tag</h2>
    <ul class="link-list">
    	<% @tag.contacts.each do |c| %>
    		<li><%= c.name %></li>
    	<% end %>
    </ul>

    <div class="save-row">
        <%= f.submit "Save", class: "btn btn-primary save-btn" %>
    </div>

<% end %>