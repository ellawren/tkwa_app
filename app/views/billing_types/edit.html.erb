<% provide :title, @billing_type.name %>
<%= link_to "Billing Types", billing_types_path, class: "header-label" %>
<div class="page-header">
	<h1><%= @billing_type.name %></h1>
</div>

<%= form_for @billing_type do |f| %>

  	<%= render 'shared/error_messages', object: f.object %>
  	<%= render 'fields', f: f %>

    <div class="save-row">
        <%= f.submit "Update Billing Type", class: "btn btn-primary save-btn" %>
    </div>

<% end %>