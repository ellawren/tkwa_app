<% provide :title, "Recommendations" %>
<div class="page-header">
	<h1>Recommendations</h1>
</div>
<p>To recommend a book, find it via the <%= link_to "search", library_path %> page and click the "add a recommendation" button.</p>
<div class="full rec-list">
	<% @recommendations.each do |r| %>
	<div class="row book-row">

		<div class="photo"><%= link_to image_tag(Book.find(r.book_id).photo.url(:thumb)), edit_book_path(r.book_id) %></div>

		<div class="description">
			<div class="text">
				<h3><%= link_to Book.find(r.book_id).title, edit_book_path(r.book_id) %></h3>
				<%= simple_format(h r.description) %>
			</div>
			<div class="user">
				<%= image_tag User.find(r.user_id).photo.url(:thumb), class: "user-round" %><%= User.find(r.user_id).name %>, <%= r.created_at.strftime("%B %d, %Y") %>
			</div>
		</div>
			
	</div>
	<% end %>
</div>
<%= will_paginate @recommendations %>