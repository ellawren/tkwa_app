<% provide :title, @book.title %>
<%= link_to "Library", library_path, class: "header-label" %>
<div class="page-header">
    <h1><%= @book.title %></h1>
</div>

<%= form_for @book do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'fields', f: f %>

    <div class="save-row">
        <%= f.submit "Save", class: "btn btn-primary save-btn" %>
    </div>

<% end %>