<% provide :title, "New Book" %>
<%= link_to "Library", library_path, class: "header-label" %>
<div class="page-header">
    <h1>New Book</h1>
</div>

<%= form_for @book do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'fields', f: f %>

    <div class="save-row">
        <%= f.submit "Add Book", class: "btn btn-primary save-btn" %>
    </div>

<% end %>
