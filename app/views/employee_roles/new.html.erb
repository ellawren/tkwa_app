<% content_for :page_header do %>
  	<% provide :title, "Add New Employee Role" %>
  	<%= link_to "Employee Roles", employee_roles_path, class: "header-label" %>
  	<div class="page-header">
    	<h1>Add New Employee Role</h1>
  	</div>
<% end %>

<%= form_for @employee_role do |f| %>

  	<%= render 'shared/error_messages', object: f.object %>
  	<%= render 'fields', f: f %>

  	<div class="save-row">
        <%= f.submit "Add Employee Role", class: "btn btn-primary save-btn" %>
    </div>

<% end %>