<% content_for :page_header do %>
  <% provide :title, "Add New Employee Role" %>
  <div class="page-header">
    <h1>Add New Employee Role</h1>
  </div>
<% end %>

<%= form_for @employee_role do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render 'fields', f: f %>

  <div class="actions">
    <%= f.submit "Add Employee Role", class: "btn" %>
  </div>
<% end %>