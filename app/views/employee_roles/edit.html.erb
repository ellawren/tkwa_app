<% provide :title, @employee_role.name %>
<%= link_to "Employee Roles", employee_roles_path, class: "header-label" %>
<div class="page-header">
	<h1><%= @employee_role.name %></h1>
</div>


<%= form_for @employee_role do |f| %>

  	<%= render 'shared/error_messages', object: f.object %>
  	<%= render 'fields', f: f %>

  	<div class="save-row">
        <%= f.submit "Update Employee Role", class: "btn btn-primary save-btn" %>
    </div>

<% end %>