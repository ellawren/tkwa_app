<% content_for :page_header do %>
  	<% provide :title, "Edit Task" %>
  	<%= link_to "Tasks", tasks_path, class: "header-label" %>
  	<div class="page-header">
    	<h1><%= @task.name %></h1>
  	</div>
<% end %>

<%= form_for(@task) do |f| %>

  	<%= render 'shared/error_messages', object: f.object %>
  	<%= render 'fields', f: f %>

  	<div class="save-row">
        <%= f.submit "Update Task", class: "btn btn-primary save-btn" %>
    </div>

<% end %>