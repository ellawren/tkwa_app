<% content_for :page_header do %>
  <% provide :title, "Edit Task" %>
  <div class="page-header">
    <h1><%= @task.name %></h1>
  </div>
<% end %>

<%= form_for(@task) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render 'fields', f: f %>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-large" %>
  </div>
<% end %>