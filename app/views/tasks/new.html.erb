<% content_for :page_header do %>
  <% provide :title, "Add New Task" %>
  <div class="page-header">
    <h1>Add New Task</h1>
  </div>
<% end %>

<%= form_for @task do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render 'fields', f: f %>

  <div class="actions">
    <%= f.submit "Create Task", class: "btn btn-large" %>
  </div>
<% end %>