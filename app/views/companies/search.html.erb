<%= search_form_for @q, url: search_companies_path,
                        :html => { method: :post } do |f| %>
		<%= f.text_field :name_cont, class: "search-name contact", placeholder: "Company Name" %> 
		<!--<%= f.submit "Search", class: "btn btn-primary" %>-->
<% end %>

<% if (params.has_key?(:q)) %>
	<% if @companies.count > 0 %>
			<div id="companies" style="float:left;margin-left:200px; ">
					<%= render 'companies' %>
			</div>
	<% end %>
<% end %>

<script src="/assets/jquery-1.8.3.min.js?body=1" type="text/javascript"></script>

<script>
$("#company_search input").keyup(function() {
    $.get($("#company_search").attr("action"), $("#company_search").serialize(), null, "script");
    return false;
  });
</script>

