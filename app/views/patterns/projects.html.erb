  <% provide :title, @project.name %>

  <div class="page-header">
    <h1><%= @project.name %></h1>
    <%= link_to "New Pattern", new_pattern_path(:p => @project.id), class: "btn btn-primary btn-right" %>
  </div>

<%= form_for @project do |f| %>
	<ul id="pattern-tiles" >
		<!-- nested form for pattern-->
	    	<%= f.fields_for :patterns, @patterns  do |builder| %>
    			<%= render 'pattern_fields', :f => builder %>
    		<% end %>
	   	<!-- end pattern form -->
	</ul>

<% end %>

<script>

    $('.fileUpload').change( function () {
        fileName = $(this).children(".upload").val().replace("C:\\fakepath\\", '');
        $(this).parent(".image-upload").children(".uploadFile").show().val(fileName);
        $(this).hide();
    });

</script>