<div class="page-header">
    <h1><%= @project.name %> Patterns</h1>
</div>

<ul id="pattern-tiles" class="print-letter">

    <% @patterns.each  do |p| %>
        <li class="pattern" >
            <div class="view-fields">
                <div class="header">
                    <div class="number"><%= p.number %> /</div>
                    <div class="title"><%= p.name %></div>
                </div>
                <div class="issue"><%= simple_format p.issue %></div>
                <div class="solution"><%= simple_format p.solution %></div>
            </div>
        </li>
    <% end %>

</ul>