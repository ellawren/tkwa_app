<% content_for :page_header do %>
  	<% provide :title, @reimbursable.reimbursable_name %>
  	<%= link_to "Reimbursables", reimbursables_path, class: "header-label" %>
  	<div class="page-header">
    	<h1><%= @reimbursable.reimbursable_name %></h1>
  	</div>
<% end %>

<%= form_for @reimbursable do |f| %>

  	<%= render 'shared/error_messages', object: f.object %>
  	<%= render 'fields', f: f %>

  	<div class="save-row">
        <%= f.submit "Update Reimbursable", class: "btn btn-primary save-btn" %>
    </div>

<% end %>