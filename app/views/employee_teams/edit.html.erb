<style>
  .header-span, .body-span { width:100%; font-family: "Lato", sans-serif; color: #34495e; }

  .header-span h3 { width:100%; font-weight:900;font-size:16px; color:#34495e;  margin-bottom:40px; }
  .modal-table input { width:80px; height:34px; padding:8px; border: 2px solid #e1e6eb; font-family: "Lato", sans-serif; color:#1abc9c; text-align:center; font-size:13px; border-radius:8px; -webkit-transition: all 0.30s ease-in-out; -moz-transition: all 0.30s ease-in-out; -ms-transition: all 0.30s ease-in-out; -o-transition: all 0.30s ease-in-out; }
  .modal-table input:focus { outline:none; border-color:#1abc9c; }
  th.table-cell { font-size:14pt; font-weight:900; width:80px; text-align:center; padding-top:0px; color:#34495e; }
    th .number { width:100%; height:24px; }
    th .blanch { width:100%; font-size:8pt; font-weight:500; text-transform:uppercase;  }
    td.modal-total { width:80px; height:34px; padding:10px; text-align:center; font-size:14px; color:#34495e; font-weight:900; }
    input.btn { float:left; margin-top:20px; padding:8px 16px 16px 16px; width:160px; border-radius:8px; background-color:#1abc9c; color:#fff; border:none; outline:none; height:34px; font-size:13px; -webkit-transition: all 0.30s ease-in-out; -moz-transition: all 0.30s ease-in-out; -ms-transition: all 0.30s ease-in-out; -o-transition: all 0.30s ease-in-out; cursor:pointer; }
    input.btn:hover { background-color:#16a085; }
</style>

<div class="header-span">
    <h3><%= @employee.name %><% if @employee_team.role? %>, <%= @employee_team.role %><% end %></h3>
</div>

<div class="body-span">

    <%= form_for(@employee_team, html: { class: "form-inline" }) do |f| %>

        <table class="modal-table">
          <tr>
              <% @project.available_phases.each do |phase| %>
                <th class="table-cell"><div class="number"><%= phase.number %></div><div class="blanch"><%= phase.name %></div></th>
              <% end %>
              <th class="table-cell"><div class="number"></div><div class="blanch">Total Hours</div></th>
          </tr>
          <tr>
              <% @project.available_phases.each do |phase| %>
                <td><%= f.text_field eval(":#{phase.shorthand}_hours"), { :onchange => "getEstHours();"} %></td>
              <% end %>
              <td class="modal-total"><%= @employee_team.est_total %></td>
          </tr>
      </table>
              
      
      <div class="actions">
          <%= f.submit "Save Changes", class: "btn" %>
      </div>

  <% end %>

</div>


<script>
function my_function() {
    $("#externalSite").dialog('destroy').remove();
}
</script>


