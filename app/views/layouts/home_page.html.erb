<!DOCTYPE html>
<html lang="en">
	<head>
		<title><%= full_title(yield(:title)) %></title>
		<%= render 'layouts/header' %>
  		<%= csrf_meta_tags %>
	</head>
	
	<body>
	
		<div id="navbar">

		    <div class="container">
		        <% if signed_in? %>
		            
		            <div class="navbar navbar-inverse">
		                <ul class="nav">
		                	<li><a class="disabled">Signed in as </a></li>
		                    <li>
		                        <%= link_to current_user.name, edit_contact_path(current_user.employee.contact_id) %>
		                        <ul>
		                            <li><%= link_to "Settings", edit_user_path(current_user.employee.user_id) %></li>
                            		<li><%= link_to "Admin", admin_path %></li>
                            		<li><%= link_to "Log Out", signout_path %></li>
		                        </ul> <!-- end sub menu -->
		                    </li>
		                </ul>
		            </div> <!-- end nav menu -->
		                
		        <% else %> 
		            <div class="navbar navbar-inverse">
		                <div class="login-box">
		                     <%= form_for(:session, url: sessions_path) do |f| %>
		                     	<div>
		                     		<%= f.label :email, "Email" %>
                					<%= f.text_field :email %>
                				</div>
                				<div>
                					<%= f.label :password, "Password" %>
                					<%= f.text_field :password %>
                				</div>
            					<%= f.submit "Sign in", class: "btn" %>
            					<%= link_to "Sign up", signup_path %>
    						<% end %>
		                </div>
		            </div> <!-- end nav menu -->
		                
		        <% end %>     
		    </div>

		</div> <!-- end navbar -->

		<!-- main content -->
    	<div class="container">

    		<% flash.each do |key, value| %>
          		<%= content_tag(:div, value, class: "flash #{key}") %>
        	<% end %>

    		<%= content_for?(:content) ? yield(:content) : yield %>

			<%= render 'layouts/footer' %>	
			<%= debug(params) if Rails.env.development? %>
    	</div> <!-- end container -->
	
	</body>
  
</html>


	