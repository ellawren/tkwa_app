<% provide :title, "Edit Expense Report" %>
<%= link_to"Expense Reports", user_expense_reports_path(@user), class: "header-label" %>
<div class="page-header">
    <h1><%= @user.name %> <span class="light"><%= @expense_report.created_at.strftime("%B %-d, %Y") %></span></h1>
</div>

<%= form_for @expense_report do |f| %>

  	<%= render 'fields', f: f %>
	<%= f.check_box :printed %> 
  	<div class="save-row">
    	<%= f.submit "Save", class: "btn btn-primary save-btn" %>
    	 <a id="print_button" class="btn btn-primary save-btn expense-report">Print</a>
  	</div>

<% end %>

<script>
$("#print_button").click(function(){
	$("#expense_report_printed").prop('checked', true);
});
</script>