<% provide :title, @key_category.name %>
<%= link_to "Key Categories", key_category_path, class: "header-label" %>
<div class="page-header">
    <h1><%= @key_category.name %></h1>
</div>

<%= form_for @key_category do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'fields', f: f %>

    <div class="save-row">
        <%= f.submit "Save", class: "btn btn-primary save-btn" %>
    </div>

<% end %>

<h2>Keywords in this category</h2>

    <ul class="link-list">
	<% @key_category.keywords.each do |param| %>
			<li>
				<%= link_to param.name, edit_keyword_path(param.id) %>
			</li>
	<% end %>
	</ul>	