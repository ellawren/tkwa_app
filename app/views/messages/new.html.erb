<% content_for :page_header do %>
  	<% provide :title, "New Message" %>
  	<%= link_to "Messages", messages_path, class: "header-label" %>
  	<div class="page-header">
    	<h1>New Message</h1>
  	</div>
<% end %>

<%= form_for(@message) do |f| %>

  	<%= render 'shared/error_messages', object: f.object %>
  	<%= render 'fields', f: f %>

  	<div class="save-row">
        <%= f.submit "Publish Message", class: "btn btn-primary save-btn" %>
    </div>
    
<% end %>