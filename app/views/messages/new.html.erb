<% content_for :page_header do %>
  <% provide :title, "New Message" %>
  <div class="page-header">
    <h1>New Message</h1>
  </div>
<% end %>

<%= form_for(@message) do |f| %>

  	<%= render 'shared/error_messages', object: f.object %>
  	<%= render 'fields', f: f %>

  	<div class="save-row">
        <%= f.submit "Update", class: "btn btn-primary save-btn" %>
    </div>
    
<% end %>