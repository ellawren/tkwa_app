<% provide :title, "Categories" %>
<%= link_to "Library", books_path, class: "header-label" %>
<div class="page-header">
	<h1>Subjects</h1>
	<%= link_to "Add Subject", new_subject_path, class: "btn btn-primary btn-right" %>
</div>

<ul class="link-list">
	<% @subjects.each do |param| %>
			<li>
				<%= link_to "#{param.number} - #{ param.name}", edit_subject_path(param.id) %>
				<% if signed_in? %>
					<% if current_user.admin? %>
					| <%= link_to "delete", param, method: :delete, confirm: "You sure?" %>
					<% end %>
				<% end %>
			</li>
	<% end %>
</ul>
