<% provide :title, "New Keyword" %>
<%= link_to "Key Ideas", keywords_path, class: "header-label" %>
<div class="page-header">
    <h1>New Key Idea</h1>
</div>

<%= form_for(@keyword, :multipart => true, class: "form-horizontal" ) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'fields', f: f %>

    <div class="save-row">
        <%= f.submit "Create Key Idea", class: "btn btn-primary save-btn" %>
    </div>

<% end %>

