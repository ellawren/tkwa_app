<% provide :title, "New Keyword" %>
<%= link_to "Keywords", keywords_path, class: "header-label" %>
<div class="page-header">
    <h1>New Keyword</h1>
</div>

<%= form_for @keyword do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'fields', f: f %>

    <div class="save-row">
        <%= f.submit "Create Keyword", class: "btn btn-primary save-btn" %>
    </div>

<% end %>

