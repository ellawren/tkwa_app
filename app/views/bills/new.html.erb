
<div class="modal-header">
    <h3>Add New Bill</h3>
    <a class="close" data-dismiss="modal">Ã—</a>
</div>

<div class="modal-body">


<%= form_for @bill do |f| %>
	<%= f.hidden_field :consultant_team_id, value: "#{@consultant.id}" %>
  	<div class="span">
	    <%= f.label(:date, class: "label") %>
	    <%= f.text_field :date, class: "span3", datadatepicker: "datepicker" %>
	</div>
	<div class="span">
	    <%= f.label :amount, class: "label" %>
	    <%= f.text_field :amount, class: "span3" %>
	</div>

  <div class="actions">
    <%= f.submit "Create", class: "btn" %>
  </div>
<% end %>

</div>
