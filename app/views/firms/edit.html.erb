<% provide :title, @firm.name %>
<%= link_to "Firms", firms_path, class: "header-label" %>
<div class="page-header">
    <h1><%= @firm.name %></h1>
</div>

<%= form_for @firm do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'fields', f: f %>
    

    <div class="save-row">
        <%= f.submit "Save", class: "btn btn-primary save-btn" %>
    </div>

<% end %>