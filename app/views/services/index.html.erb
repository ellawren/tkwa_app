<div class="page-header">
        <h1>Services</h1>
        <%= link_to "Add Service", new_service_path, :class => "btn primary" %>
</div>
<br /><br />
<h3>Services Listing</h3>
<table>
  <thead>
    <tr>
      <th>Name</th>
      
    </tr>
  </thead>
  <tbody>
    <% @services.each do |service| %>
        <tr>
          <td><%= link_to service.service_name, service %></td>
          <% if current_user.admin? %>
          <td><%= link_to "delete", service, method: :delete, confirm: "You sure?" %></td>
          <% end %>
        </tr>
    <% end %>
    </tbody>
</table>