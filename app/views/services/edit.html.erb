<% content_for :page_header do %>
    <% provide :title, @service.service_name %>
    <%= link_to "Services", services_path, class: "header-label" %>
    <div class="page-header">
      	<h1><%= @service.service_name %></h1>
    </div>
<% end %>

<%= form_for(@service) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>
    <%= render 'fields', f: f %>

  	<div class="save-row">
        <%= f.submit "Update Service", class: "btn btn-primary save-btn" %>
    </div>

<% end %>