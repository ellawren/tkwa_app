<% provide :title, "Add New Pattern Group" %>
<%= link_to "Pattern Groups", pattern_groups_path, class: "header-label" %>
<div class="page-header">
	<h1>Add New Pattern Group</h1>
</div>

<%= form_for @pattern_group do |f| %>

  	<%= render 'shared/error_messages', object: f.object %>
  	<%= render 'fields', f: f %>

  	<div class="save-row">
        <%= f.submit "Add Pattern Group", class: "btn btn-primary save-btn" %>
    </div>

<% end %>