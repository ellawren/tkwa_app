<% content_for :page_header do %>
  <% provide :title, "Add New Holiday" %>
  <div class="page-header">
    <h1>Add New Holiday</h1>
  </div>
<% end %>

<%= form_for(@holiday, html: { class: "form-horizontal" }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render 'fields', f: f %>

  <div class="actions">
    <%= f.submit "Add Holiday", class: "btn" %>
  </div>
<% end %>