<% content_for :page_header do %>
  	<% provide :title, "Add New Holiday" %>
  	<%= link_to "Holidays", holidays_path, class: "header-label" %>
  	<div class="page-header">
    	<h1>Add New Holiday</h1>
  	</div>
<% end %>

<%= form_for(@holiday, html: { class: "form-horizontal" }) do |f| %>

  	<%= render 'shared/error_messages', object: f.object %>
  	<%= render 'fields', f: f %>

  	<div class="save-row">
        <%= f.submit "Add Holiday", class: "btn btn-primary save-btn" %>
    </div>

<% end %>