<% content_for :page_header do %>
  <% provide :title, @holiday.name %>
  <div class="page-header">
    <h1><%= @holiday.name %></h1>
  </div>
<% end %>

<strong><%= @holiday.name %></strong><br />
<%= @holiday.date_object.strftime("%m/%d/%Y") %><br />
Year: <%= @holiday.year %><br />
Week: <%= @holiday.week %><br />
Day: <%= @holiday.day %><br />
<br />
<%= link_to "Index", holidays_path, class: "btn" %>