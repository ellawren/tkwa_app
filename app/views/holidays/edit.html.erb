<% provide :title, @holiday.name %>
<%= link_to "Holidays", holidays_path, class: "header-label" %>
<div class="page-header">
	<h1><%= @holiday.name %></h1>
</div>

<%= form_for(@holiday, html: { class: "form-horizontal" }) do |f| %>

  	<%= render 'shared/error_messages', object: f.object %>
  	<%= render 'fields', f: f %>

  	<div class="save-row">
        <%= f.submit "Update Holiday", class: "btn btn-primary save-btn" %>
    </div>

<% end %>