<% content_for :page_header do %>
  <% provide :title, @holiday.name %>
  <div class="page-header">
    <h1><%= @holiday.name %></h1>
  </div>
<% end %>

<%= form_for(@holiday, html: { class: "form-horizontal" }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render 'fields', f: f %>

  <div class="actions">
    <%= f.submit "Update Holiday", class: "btn" %>
  </div>
<% end %>