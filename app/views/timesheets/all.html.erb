<% content_for :page_header do %>
  <% provide :title, "All Timesheets" %>
  <div class="page-header">
    <h1><%= @week %> / All Timesheets &nbsp;<span class="light"><%= parse_date_full(@week, @year) %></span></h1>
  </div>
<% end %>

<% content_for :tabnav do %>
	<%= render "tabnav_all_timesheets" %>
<% end %>


<!-- modal for timesheet print -->
		<div class="print-timesheet modal fade" id="timesheetModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

		</div><!-- /.modal -->
<!-- end modal -->


<div class="timesheet-panel" id="yr-<%= this_year %> wk-<%= this_week %>">

	<table class="table right-align timesheets">
		<thead>
			<tr>
				<th class="left">Name</th>
				<th>Total Hours</th>
				<th class="line-left line-top">Cumulative<br>Hours</th>
				<th class="line-top">Cumulative<br>Goal</th>
				<th class="line-right line-top">Over/Under</th>
				<th class="left">Status</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |user| %>
				<% t = Timesheet.find_by_user_id_and_week_and_year(user.id, @week, @year) %>
				<% if t.present? && t.data_record.present? %>
					<tr>
						<td class="left"><%= link_to user.name, user_index_timesheets_path(user.id), class: "green" %></td>
						<td class="bold"><%= precise(nonzero?(t.timesheet_total)) %></td>
						<td class="line-left line-bottom">
							<%= total_hours_for(user.id, t.year, t.week, t.data_record.start_week) %>
						</td>
						<td class="line-bottom"><%= (t.ytd_goal(t.week - t.data_record.start_week + 1).to_f) %></td>
						<td class="line-right line-bottom"><%= number_with_precision(t.ytd('total').to_f - (t.ytd_goal(t.week - t.data_record.start_week + 1).to_f), strip_insignificant_zeros: true) %></td>
			  			
		  				<td class="link">
						<%= form_for(t) do |f| %>

							<%= f.check_box :complete, class: "hidden"  %> 
							<% if f.object.complete == true %>
								<%= f.submit "open", class: "open close-timesheet btn" %>
		  					<% else %>
		  						<%= f.submit "closed", class: "closed open-timesheet btn" %>
		  					<% end %>

		  					<%= f.check_box :printed, class: "hidden" %> 
							<% if f.object.complete == false %>
								<% if f.object.printed == false %>
									<a href="/users/<%= f.object.user_id %>/timesheets/<%= f.object.year %>/<%= f.object.week %>/print" data-target="#timesheetModal" data-toggle="modal" class="print-timesheet btn">Print Timesheet</a>
								<% else %>
									<%= f.submit "Printed", class: "unprint-timesheet btn" %>
								<% end %>
							<% end %>

						<% end %>	
					</td>
					</tr>
				<% end %>
			<% end %>
		</tbody>
	</table>		

</div>

<script>
	// close timesheet
	$('.close-timesheet').click( function() {
        $(this).parent(".edit_timesheet").children("#timesheet_complete").prop('checked', false);
        $(this).parent(".edit_timesheet").children("#timesheet_printed").prop('checked', false);
	});
	// reopen timesheet
	$('.open-timesheet').click( function() {
        $(this).parent(".edit_timesheet").children("#timesheet_complete").prop('checked', true);
        $(this).parent(".edit_timesheet").children("#timesheet_printed").prop('checked', false);
	});
    // print timesheet
	//$('.print-timesheet').click( function() {
    //    $(this).parent(".edit_timesheet").children("#timesheet_printed").prop('checked', true);
	//});
	// unprint timesheet
	$('.unprint-timesheet').click( function() {
        $(this).parent(".edit_timesheet").children("#timesheet_printed").prop('checked', false);
	});
	//reset modal remote on close
	$('#timesheetModal').on('hide.bs.modal', function (e) {
	    $(this).data('bs.modal', null);
	    location.reload(true);
	});
</script>
