<div class="table-row holiday">

    <div class="non-editable">
        <div class="category-cell">
            Holiday
        </div>
        <div class="description-cell">
            <%= f.name %>
        </div>

        <div class="time-entries">  
            <div class="entry <%= is_today?(1, @timesheet) %>"><% if @day_1.present? %><div class="entry-spacer weekend"><%= @timesheet.data_record.holiday if f.day == 1 %></div><% else %><div class="spacer"></div><% end %></div>
            <div class="entry <%= is_today?(2, @timesheet) %>"><% if @day_2.present? %><div class="entry-spacer"><%= @timesheet.data_record.holiday if f.day == 2 %></div><% else %><div class="spacer"></div><% end %></div>
            <div class="entry <%= is_today?(3, @timesheet) %>"><% if @day_3.present? %><div class="entry-spacer"><%= @timesheet.data_record.holiday if f.day == 3 %></div><% else %><div class="spacer"></div><% end %></div>
            <div class="entry <%= is_today?(4, @timesheet) %>"><% if @day_4.present? %><div class="entry-spacer"><%= @timesheet.data_record.holiday if f.day == 4 %></div><% else %><div class="spacer"></div><% end %></div>
            <div class="entry <%= is_today?(5, @timesheet) %>"><% if @day_5.present? %><div class="entry-spacer"><%= @timesheet.data_record.holiday if f.day == 5 %></div><% else %><div class="spacer"></div><% end %></div>
            <div class="entry <%= is_today?(6, @timesheet) %>"><% if @day_6.present? %><div class="entry-spacer"><%= @timesheet.data_record.holiday if f.day == 6 %></div><% else %><div class="spacer"></div><% end %></div>
            <div class="entry <%= is_today?(7, @timesheet) %>"><% if @day_7.present? %><div class="entry-spacer weekend"><%= @timesheet.data_record.holiday if f.day == 7 %></div><% else %><div class="spacer"></div><% end %></div>
            <div class="total"><%= @timesheet.data_record.holiday %></div>
        </div>

    </div>

</div>

