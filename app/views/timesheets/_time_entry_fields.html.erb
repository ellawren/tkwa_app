<div class="table-row <% if is_first?(f.object) %>first-row<% end %> <% if unsaved?(f.object) %>unsaved<% end %>">
  <%= f.hidden_field :timesheet_id, value: "#{@timesheet.id}" %>
  <%= f.hidden_field :employee_id, value: "#{@timesheet.employee_id}" %>

  <% if f.object.project_id %>
    <div class="input-span span3-25">
      <% if is_first?(f.object) %>
        <%= link_to Project.find(f.object.project_id).name, tracking_project_path(f.object.project_id), class: "tip-bottom", rel: "tooltip", dataoriginaltitle: "click to view tracking page" %> 
      <% end %>
    </div>
  <% else %>
    <%= f.collection_select(:project_id, @contact.project_list, :id, :name, { :include_blank => true }, { :class => "span3-25 project-selector" } ) %>
  <% end %>

  <% if f.object.phase_number %>
    <div class="input-span span1-75">
      <%= Phase.find_by_number(f.object.phase_number).name %>
    </div>
  <% else %>
    <%= f.collection_select :phase_number, Phase.order(:number), :number, :name, { include_blank: true }, { :class => "span1-75 phase-selector" } %>
  <% end %>

  <% if f.object.task %>
    <div class="input-span span2-75">
      <%= f.object.task %>
    </div>
  <% else %>
    <%= f.collection_select(:task, Task.all, :name, :name, { :include_blank => true }, { :class => "span2-75" } ) %>
  <% end %>

  <div class="time-entries">  
    <div class="entry <%= is_today?(1, @timesheet) %>"><%= f.text_field :day1, class: "weekend" %></div>
    <div class="entry <%= is_today?(2, @timesheet) %>"><%= f.text_field :day2 %></div>
    <div class="entry <%= is_today?(3, @timesheet) %>"><%= f.text_field :day3 %></div>
    <div class="entry <%= is_today?(4, @timesheet) %>"><%= f.text_field :day4 %></div>
    <div class="entry <%= is_today?(5, @timesheet) %>"><%= f.text_field :day5 %></div>
    <div class="entry <%= is_today?(6, @timesheet) %>"><%= f.text_field :day6 %></div>
    <div class="entry <%= is_today?(7, @timesheet) %>"><%= f.text_field :day7, class: "weekend" %></div>
  </div>
  <div class="input-span total"><%= nonzero?(f.object.entry_total) %></div>
  <%= link_to_remove_fields "x", f %>
</div>