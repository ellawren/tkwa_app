	/* calendar */
	#calendar { float:left; width:660px; margin-top:20px; }
	#calendar h2 { width:660px; text-align:center; font-size:14px; font-weight:900; padding-bottom:3px; }
	#calendar h2 .previous-month, #calendar h2 .next-month { float:left; width:30px; height:30px; border:1px solid #ddd; border-radius:30px; background-image:url(/assets/select-arrow.png); background-position:0px 2px; background-repeat:no-repeat; -webkit-transform: rotate(90deg); -moz-transform: rotate(90deg); -ms-transform: rotate(90deg); -o-transform: rotate(90deg); transform: rotate(90deg); }
